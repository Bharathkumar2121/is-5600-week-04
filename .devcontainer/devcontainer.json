{
  "name": "IS 5600 - Lab 4",
  "image": "mcr.microsoft.com/devcontainer/universal:2",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "npm install",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "npm start"
  },
  // Configure tool-specific properties.
  "customizations": {
    "codeSpaces": {
      "openFiles": ["app.js"]
    },
    // Configure properties specific to VS Code.
    "vscode": {
      "settings": {},
      "extensions": ["streetsidesoftware.code-spell-checker"]
    }
  },
  "portsAttributes": {
    "3000": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [3000]
}
// cSpell:ignore codespaces

